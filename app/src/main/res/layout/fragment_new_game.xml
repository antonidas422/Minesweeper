<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewGameFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Beginner"
                android:textStyle="bold"
                android:textSize="40sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8x8 board\n10 bombs"
                android:textSize="25sp"/>

            <Button
                android:id="@+id/button_beginner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start!" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Intermediate"
                android:textStyle="bold"
                android:textSize="40sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="16x16 board\n40 bombs"
                android:textSize="25sp"/>

            <Button
                android:id="@+id/button_intermediate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start!"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pro"
                android:textStyle="bold"
                android:textSize="40sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="30x16 board\n99 bombs"
                android:textSize="25sp"/>

            <Button
                android:id="@+id/button_pro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start!"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Special"
                android:textSize="40sp"/>


            <TextView
                android:id="@+id/special_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"/>

        <SeekBar
            android:id="@+id/seekBar_width"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="50"
            android:min="8"
            android:progress="8" />
        <TextView
            android:id="@+id/special_col"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"/>
        <SeekBar
            android:id="@+id/seekBar_length"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="8"
            android:min="8"
            android:progress="8" />
        <TextView
            android:id="@+id/special_bombs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"/>
        <SeekBar
            android:id="@+id/seekBar_bombs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="32"
            android:min="10"
            android:progress="10" />
            <Button
                android:id="@+id/button_special"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start!"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>